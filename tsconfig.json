{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2017", "DOM"],
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
